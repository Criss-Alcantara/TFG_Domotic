<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #202732 "
    tools:context=".Cerraduras">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="#FF5722"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.002">

        <Button
            android:id="@+id/b_home"
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:layout_weight="0.5"
            android:background="@drawable/logo" />

        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Titulo"
            android:textAlignment="center"
            android:textColor="#FDFFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/b_modificar"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="@drawable/modificar"
            android:onClick="Siguiente_Modificar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="64dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="visible">

            <Button
                android:id="@+id/b_escenas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Siguiente_Escena"
                android:text="@string/BotonEscena"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/b_cerradura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BotonCerradura" />

            <TextView
                android:id="@+id/seleccion_escenas"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FF5722"
                tools:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/b_alarma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Siguiente_Alarma"
                android:text="@string/BotonAlarma" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.31">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/Cerradura_PP"
                android:textColor="#F8F8F4F4"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:layout_marginTop="48dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b_cerrado_pp"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/candado_cerrado"
                    android:onClick="Cambio_Estado_Cerrado_PP" />

                <TextView
                    android:id="@+id/tv_estado_cerradura_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Estado_Abierto"
                    android:textAlignment="center"
                    android:textColor="#C90404"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/b_abierto_pp"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/candado_abierto"
                    android:onClick="Cambio_Estado_Abierto_PP" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="@string/Cerradura_PT"
                android:textColor="#F8F8F4F4"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:id="@+id/linearLayout4"
                android:layout_marginTop="36dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b_cerrado_pt"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/candado_cerrado"
                    android:onClick="Cambio_Estado_Cerrado_PT" />

                <TextView
                    android:id="@+id/tv_estado_cerradura_pt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Estado_Abierto"
                    android:textAlignment="center"
                    android:textColor="#C90404"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/b_abierto_pt"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/candado_abierto"
                    android:onClick="Cambio_Estado_Abierto_PT" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_vc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/Cerradura_VC"
                android:textColor="#F8F8F4F4"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="250dp"
                android:layout_height="90dp"
                android:layout_marginTop="32dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/b_cerrado_vc"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/candado_cerrado"
                    android:onClick="Cambio_Estado_Cerrado_VC" />

                <TextView
                    android:id="@+id/tv_estado_cerradura_vc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Estado_Abierto"
                    android:textAlignment="center"
                    android:textColor="#C90404"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/b_abierto_vc"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/candado_abierto"
                    android:onClick="Cambio_Estado_Abierto_VC" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>