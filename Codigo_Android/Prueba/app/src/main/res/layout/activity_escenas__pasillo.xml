<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #202732 "
    tools:context=".Escenas_Pasillo">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="#FF5722"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/b_home"
            android:layout_width="1dp"
            android:layout_height="70dp"
            android:layout_weight="0.5"
            android:background="@drawable/logo" />

        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Titulo"
            android:textAlignment="center"
            android:textColor="#FDFFFFFF"
            android:textSize="36sp" />

        <Button
            android:id="@+id/b_modificar"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="@drawable/modificar"
            android:onClick="Siguiente_Main" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="407dp"
        android:layout_height="64dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="visible">

            <Button
                android:id="@+id/b_escenas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Siguiente_Escena"
                android:text="@string/BotonEscena"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/seleccion_escenas"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FF5722"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/b_cerradura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Siguiente_Cerradura"
                android:text="@string/BotonCerradura" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/b_alarma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BotonAlarma" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.31">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_pasillo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/Titulo_Pasillo"
                android:textColor="#FF5722"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_p_lp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:text="@string/Luz_Principal"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ToggleButton
                android:id="@+id/b_p_lp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textOff = " "
                android:textOn = " "
                android:background="@drawable/luz_cerrada"
                android:onClick="Cambio_LP_P" />


            <TextView
                android:id="@+id/tv_p_ls"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:text="@string/Luz_Secundaria"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ToggleButton
                android:id="@+id/b_p_ls"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textOff = " "
                android:textOn = " "
                android:background="@drawable/luz_cerrada"
                android:onClick="Cambio_LS_P" />

            <TextView
                android:id="@+id/tv_p_lh"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="32dp"
                android:text="@string/Luz_Habitaciones"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ToggleButton
                android:id="@+id/b_p_lh"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:textOff = " "
                android:textOn = " "
                android:background="@drawable/luz_cerrada"
                android:onClick="Cambio_LH_P" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>